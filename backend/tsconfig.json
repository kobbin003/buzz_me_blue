{
	"compilerOptions": {
		"module": "NodeNext",
		"moduleResolution": "NodeNext",
		"target": "ESNext",
		"sourceMap": true,
		"outDir": "dist",
		"rootDir": "src",
		"resolveJsonModule": true,
		"typeRoots": ["./types", "./node_modules/@types"],
		"skipLibCheck": true
	},
	"include": ["src/**/*.json", "src/*.json", "src/**/*.ts"]
}
